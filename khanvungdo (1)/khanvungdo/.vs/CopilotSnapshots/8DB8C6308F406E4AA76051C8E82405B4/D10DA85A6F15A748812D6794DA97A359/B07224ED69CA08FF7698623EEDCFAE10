using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using DataAccess.Repositories;

namespace WindowsFormsApp2
{
	public partial class frmDangNhap : Form
	{
		public frmDangNhap()
		{
			InitializeComponent();

		}

		

        private void container(object _form)
        {
            if (pnHienThi.Controls.Count > 0) pnHienThi.Controls.Clear();

            Form fm = _form as Form;
            fm.TopLevel = false;
            fm.FormBorderStyle = FormBorderStyle.None;
            fm.Dock = DockStyle.Fill;
            pnHienThi.Controls.Add(fm);
            pnHienThi.Tag = fm;
            fm.Show();

        }

        private void lbLogin_Click(object sender, EventArgs e)
        {
         
        }

        private void guna2TextBox2_TextChanged(object sender, EventArgs e)
        {

        }

        private void btnDangNhap_Click(object sender, EventArgs e)
        {
            var repo = new SqlAuthRepository();
            var ok = repo.Login(txtTenTaiKhoan.Text.Trim(), txtMatKhau.Text);
            if (ok)
            {
                this.Hide();
                using (var main = new frmMain())
                {
                    main.ShowDialog();
                }
                this.Close();
            }
            else
            {
                MessageBox.Show("Sai thông tin đăng nhập", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnQuenMatKhau_Click(object sender, EventArgs e)
        {
            frmQuenMatKhau frm = new frmQuenMatKhau(this);
            this.Hide(); 
            frm.Show(); 

            frm.FormClosed += (s, args) => this.Show();
        }
    }
}
