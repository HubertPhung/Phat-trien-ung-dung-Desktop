using System;
using System.Linq;
using System.Windows.Forms;
using DataAccess.Repositories;

namespace WindowsFormsApp2
{
    public partial class frmPhong : Form
    {
        private readonly SqlPhongRepository _repo = new SqlPhongRepository();
        public frmPhong()
        {
            InitializeComponent();
            Load += FrmPhong_Load;
        }

        private void FrmPhong_Load(object sender, EventArgs e)
        {
            LoadPhong();
        }

        private void LoadPhong()
        {
            lvDSPhong.Items.Clear();
            foreach (var p in _repo.GetAll())
            {
                var item = new ListViewItem(p.TenPhong);
                item.SubItems.Add(""); // Số người - chưa có bảng
                item.SubItems.Add(p.TenKH ?? "");
                item.SubItems.Add(""); // Số DV - cần join khác nếu muốn
                item.SubItems.Add(""); // Thành tiền - cần tính theo hóa đơn mở/đã đóng
                item.SubItems.Add(p.Status);
                lvDSPhong.Items.Add(item);
            }

            cbSoPhong.Items.Clear();
            foreach (var p in _repo.GetAll())
                cbSoPhong.Items.Add(p.TenPhong);
        }
    }
}
